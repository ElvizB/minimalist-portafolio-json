---
import Section from '../Section.astro';
import { education } from '@cv';
---

<Section title="Education">
	<ul>
		{
			education.map(({ institution, area, startDate, endDate }) => {
				const starYear = new Date(startDate).getFullYear();
				const endYear = endDate != null ? new Date(endDate).getFullYear() : 'Actual';
				const years = `${starYear} - ${endYear}`;

				return (
					<li>
						<article>
							<header>
								<div>
									<h3>{institution}</h3>
								</div>
								<time>{years}</time>
							</header>
							<footer>
								<p>{area}</p>
							</footer>
						</article>
					</li>
				);
			})
		}
	</ul>
</Section>

<style>
	ul {
		display: flex;
		flex-direction: column;
		gap: 32px;
		& li {
			& article {
				font-weight: 500;
				color: #111;
				& header {
					display: flex;
					justify-content: space-between;
					align-items: flex-start;
					margin-bottom: 4px;
					& div {
						& h3 {
							font-weight: 500;
							color: #111;
						}
					}
					& time {
						color: #555;
						font-size: 0.85rem;
					}
				}
			}
		}
	}
</style>
